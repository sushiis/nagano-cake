<div class="container">
  <div class="sign-row">


<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

　<div>
  <div>
    <%= f.label :姓 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div>
    <%= f.label :名 %><br />
    <%= f.text_field :farst_name, autofocus: true, autocomplete: "farst_name" %>
  </div>
  </div>

  <div>
  <div>
    <%= f.label :セイ %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div>
    <%= f.label :メイ %><br />
    <%= f.text_field :farst_name_kana, autofocus: true, autocomplete: "farst_name_kana" %>
  </div>
  </div>

   <div>
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div>
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div>
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div>
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>

<h3>すでに登録済みの方</h3>

<%=link_to "こちら", new_customer_session_path %>からログインしてください。

</div>
</div>

