<div class="container">
  <div class="row">
    <thead>
      <h2>商品一覧 (全<%= @items.count %>件)</h2>
    </thead>
  </div>
  <tbody>
  <div class="row row-cols-1 row-cols-md-4 mb-3 text-center">
     <% @items.each do |item| %>
        <div class="card mb-3 shadow-sm">
          <p><%= attachment_image_tag item, :image_id, size: "200x160" %></p>
          <p><%= item.name %></p>
          <p>¥<%= item.price %></p>
        </div>
　　<% end %>

    </div>
  </div>
  </tbody>
</div>