<div class="container">
  <div class="row"><h3>注文情報確認</h3></div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, size: "50x40" %>  <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= (cart_item.item.with_tax_price * cart_item.amount).to_s(:delimited) %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>送料</th>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= @total.round.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= (@postage + @total).round.to_s %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
      <div class="row">
          <tr>
            <th><h4>支払方法 </h4></th>
            <td><%= @order.way %></td>
          </tr>
      </div>
      <div class="row">
          <tr>
            <th><h4>お届け先  </h4></th>
            <td>
              <%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
      </div>
     <div class="row text-center">
       <div class="col text-center ">
        <%= form_with model:@order, url:orders_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :way, :value => @order.way %>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :postage, :value => @order.postage %>
        <%= f.hidden_field :total_price, :value => @order.total_price %>
        <%= f.submit "購入を確定する", class: "btn btn-success ml-2", "data-confirm" => "購入を確定してもよろしいでしょうか？" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


