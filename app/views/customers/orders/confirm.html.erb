<div class="container">
  <div class="row"><h3>注文情報確認</h3></div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, size: "50x40" %>  <%= cart_item.item.name %></td>
            <td><%= (cart_item.item.price * 1.1).to_s %></td>
            <td><%= cart_item.amount %></td>
            <td><%= ((cart_item.item.price * 1.1) * cart_item.amount).to_s %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>送料</th>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%=  %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
      <table>
        <div>
          <tr>
            <th scope="col"><h4>支払方法</h4></th>
            <th "col"><%= session[:order]["way"] %></th>
          </tr>
        </div>
      </table>
      <table>
        <div>
          <tr>
            <th scope="col"><h4>お届け先</h4></th>
            <th "col">
              <%= session[:order]["postal_code"] %>
              <%= session[:order]["address"] %>
              <%= session[:order]["name"] %>
            </th>
          </tr>
        </div>
      </table>
  </div>
</div>