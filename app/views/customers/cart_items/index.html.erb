<div class="container">
  <div class="row">
    <div class="col"><h2>ショッピングカート</h2></div>
    <div class="col"><%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete %></div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価(税込)</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <th scope="row"><%= attachment_image_tag cart_item, :image, size: "50x40" %>  <%= cart_item.item.name %></th>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>2  <%= link_to '変更', "/cart_items/current_cart", method: :update %></td>
            <td><<%= cart_item.subtotal %></td>
            <td><%= link_to '削除', "/cart_items/destroy", method: :destroy %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">買い物を続ける</div>
    <div class="col">
      <table class="table table-bordered">
        <td>合計金額</td>
        <td><% @合計金額 +=  cart_item.subtotal %></td>
          <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col text-center">情報入力に進む</div>
  </div>

</div>