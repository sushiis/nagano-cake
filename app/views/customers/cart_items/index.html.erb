<div class="container">
  <div class="row">
    <div class="col"><h2>ショッピングカート</h2></div>
    <div class="col"><%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %></div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価(税込)</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <th scope="row"><%= attachment_image_tag cart_item.item, :image, size: "50x40" %>  <%= cart_item.item.name %></th>
            <td><%= cart_item.item.with_tax_price %></td>
            <%= form_with(model: cart_item,url: cart_item_path(cart_item.id), local:true) do |f| %>
            <td><%= f.number_field :amount, min:1, max:20 %>  <%= f.submit "変更", class: "btn btn-success ml-2" %></td>
            <% end %>
            <td><%= cart_item.sum_of_price %></td>
            <td><%= link_to '削除', cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col"><%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %></div>
    <div class="col">
      <table class="table table-bordered">
        <td>合計金額</td>
        <%# @cart_items.each do |cart_item| %>
        <td><%= @total.round.to_s(:delimited)%></td>
        <%# end %>

      </table>
    </div>
  </div>

  <div class="row">
    <div class="col text-center"><%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %></div>
  </div>

</div>