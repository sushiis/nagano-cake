<div class="container">
  <div class="row">
    <h2><%= @customer.last_name %><%= @customer.farst_name %>さんの会員情報編集</h2>
  </div>
  <div class="row">
    <table>
      <%= form_with model: @customer, url: edit_admins_customer_path(@customer.id), local:true do |f| %>
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th>姓  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>  名  <%= f.text_field :farst_name, autofocus: true, autocomplete: "farst_name" %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th>セイ <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>   メイ  <%= f.text_field :farst_name_kana, autofocus: true, autocomplete: "farst_name_kana" %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address, autofocus: true, autocomplete: "address" %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
        </tr>
        <tr>
          <th></th>
          <th><%= f.submit "変更を保存", class:"btn btn-success" %></th>
        </tr>
      <% end %>
    </table>
  </div>
</div>