<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row">
    <div class="col-lg-10">
      <table class="table">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <th><%= link_to order.created_at, admins_order_path(order.id) %></th>
            <th><%= order.customer.name %></th>
            <th><%= order.order_detail.amount %></th>
            <th><%= order.status %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<%= paginate @page %>