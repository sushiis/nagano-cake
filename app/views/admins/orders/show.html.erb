<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <div class="col-lg-10">
      <table class="table">
        <tr>
          <th>購入者</th>
          <th>
            <%= link_to admins_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %>
            <%= @order.customer.farst_name %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>注文日</th>
          <th><%= @order.created_at %></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th><%= @order.postal_code %>  <%= @order.address %><br/><%= @order.name %></th>
        </tr>
        <tr>
          <th>支払方法</th>
          <th><%= @order.way %></th>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <th>
            <%= form_with(model: @order, url: admins_order_path, local: true, class: "form-row") do |f| %>
            <%= f.select :status, Order.statuses.keys.to_a %>
            <%= link_to "更新", admins_order_path, class:"btn btn-success" %>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <table class="table">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
        <% @order_details.each do |order_detail| %>
          <tr>
            <th><%= order_detail.item.name %></th>
            <th><%= order_detail.price %></th>
            <th><%= order.order_detail.amounto %></th>
            <th><%= (order_detail.price * order_detail.amounto) %></th>
            <%= form_with(model: order_detail, url: admins_order_order_details_path(order_detail), local: true) do |f| %>
              <th><%= f.select :making_status, OrderDetail.making_statuses.keys.to_a %></th>
              <th><%= f.submit "更新", class:"btn btn-success" %></th>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-lg-3">
      <table class="table">
        <tr>
          <th scope="col">商品合計</th>
          <th><%= (@order.total_price - @order.postage) %></th>
        </tr>
        <tr>
          <th scope="col">送料</th>
          <th><%= @order.postage %></th>
        </tr>
        <tr>
          <th scope="col">請求金額合計</th>
          <th><%= @order.total_price %> </th>
        </tr>
      </table>
    </div>
  </div>
</div>