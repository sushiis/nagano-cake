<div class="container">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>
  <div class="row">
    <table>
      <tr>
        <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
          <th>ジャンル名</th>
          <th><%= f.text_field :name %></th>
          <th><%= f.submit "新規登録", class: "btn btn-success" %></th>
        <% end %>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-lg-5">
      <table class="table">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <th><%= genre.name %></th>
            <th><%= link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-success" %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>