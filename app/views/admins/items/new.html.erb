<div class="container">
  <div class="row">
    <h2>商品新規登録</h2>
  </div>
  <%= form_with model: @item, url: admins_items_path, local:true do |f| %>
  <div class="row">
    <div class="col-lg-7, mx-auto">
      <table>
        <tr>
          <th>商品画像</th>
          <th><%= f.attachment_field :image, placeholder:"商品画像" %></th>
        </tr>
        <tr>
          <th>商品名</th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= f.text_field :introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
          </th>
        </tr>
        <tr>
          <th>税抜き</th>
          <th><%= f.text_field :price %></th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th>

          <div class="form-check">
          <%= f.radio_button :status, true %>
          <%= f.label :status, "販売中" %>

          <%= f.radio_button :status, false %>
          <%= f.label :status, "販売停止中" %>
          </div>

          </th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2, mx-auto">
       <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>