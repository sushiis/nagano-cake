<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品一覧</h2>
    </div>
    <div class="col">
      <%= link_to "＋", new_admins_item_path, class: "btn btn-success rounded-circle p-2" %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <th scope="row"><%= item.id %></th>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= genres.name %></td>
            <td><%= item.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>